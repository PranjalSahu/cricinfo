<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Batsman</th>
      <th>Bowler</th>
      <th>Run</th>
      <th>Comment</th>
      <th>Important</th>
      <th>Over</th>
      <th>Match</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.batsman_id %></td>
        <td><%= event.bowler_id %></td>
        <td><%= event.run %></td>
        <td><%= event.comment %></td>
        <td><%= event.important %></td>
        <td><%= event.over %></td>
        <td><%= event.match_id %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

